<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dosion.model.system.mapper.LogDao">
    <resultMap id="BaseResultMap" type="com.dosion.model.system.entity.SysLog">
        <id property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="title" column="title"/>
        <result property="createBy.loginName" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="remoteAddr" column="remote_addr"/>
        <result property="userAgent" column="user_agent"/>
        <result property="requestUri" column="request_uri"/>
        <result property="method" column="method"/>
        <result property="params" column="params"/>
        <result property="time" column="time"/>
        <result property="delFlag" column="del_flag"/>
        <result property="exception" column="exception"/>
    </resultMap>
    <sql id="Column">
    a.id
    ,a.type
    ,a.title
    ,a.create_by
    ,a.create_time
    ,a.remote_addr
    ,a.user_agent
    ,a.request_uri
    ,a.method
    ,a.params
    ,a.time
    ,a.del_flag
    ,a.exception
  </sql>

    <sql id="Joins">

    </sql>

    <select id="get" resultMap="BaseResultMap">
        select
        <include refid="Column"/>
        from sys_log AS a
        <include refid="Joins"/>
        where a.id = #{id,jdbcType=INTEGER}
    </select>

    <delete id="delete">
        delete from sys_log
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <!-- 分页查询 -->
    <select id="findByPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Column"/>
        from sys_log AS a
        <include refid="Joins"/>
        <include refid="searchCondition"/>
        ORDER BY a.id DESC
    </select>

    <!-- 查询条件 -->
    <sql id="searchCondition">
        <where>
            <if test="dateFrom !=null and dateTo != ''">
                AND a.create_time BETWEEN #{dateFrom} AND #{dateTo}
            </if>
        </where>
    </sql>


    <!-- 添加 -->
    <insert id="insert">
		INSERT INTO sys_log
		(
			`type`
			,`title`
			,`create_by`
			,`remote_addr`
			,`user_agent`
			,`request_uri`
			,`method`
			,`params`
			,`time`
			,`exception`
		)
		VALUES
		(
			#{type},
			#{title},
			#{createBy.loginName},
			#{remoteAddr},
			#{userAgent},
			#{requestUri},
			#{method},
			#{params},
			#{time},
			#{exception}
		)
	</insert>
</mapper>